<h1 class="text-center">Formulario Usuario</h1>
<hr />
<div class="text-center">
    <form asp-controller="Producto" asp-action="Form" method="POST" class="col-md-6 offset-md-3" enctype="multipart/form-data">
        <input hidden name="IdProducto" value="@Model.IdProducto" />
        <div class="form-group m-2">
            <label for="nombre" class="mb-1"><i class="fas fa-user"></i> Nombre:</label>
            <input type="text" id="nombre" name="nombre" value="@Model.Nombre" class="form-control" required>
        </div>
        <div class="form-group m-2">
            <label for="PrecioUnitario" class="mb-1"><i class="fas fa-user"></i> Precio Unitario:</label>
            <input type="text" id="PrecioUnitario" name="PrecioUnitario" value="@Model.PrecioUnitario" class="form-control" required>
        </div>
        <div class="form-group m-2">
            <label for="Stock" class="mb-1"><i class="fas fa-user"></i> Stock:</label>
            <input type="text" id="Stock" name="Stock" value="@Model.Stock" class="form-control" required>
        </div>
        <div class="form-group m-2">
            <label for="Proveedor.IdProveedor" class="mb-1"><i class="fas fa-user"></i> IdProveedor: </label>
            <input type="text" id="correo" name="Proveedor.IdProveedor" value="@Model.Proveedor.IdProveedor" class="form-control" required>
        </div>
        <div class="form-group m-2">
            <label for="Departamento.IdDepartamento" class="mb-1"><i class="fas fa-user"></i> IdDepartamento:</label>
            <input type="text" id="Departamento.IdDepartamento" name="Departamento.IdDepartamento" value="@Model.Departamento.IdDepartamento" class="form-control" required>
        </div>


        <div class="form-group m-2">
            <label for="Descripcion" class="mb-1"><i class="fas fa-user"></i> Descripcion:</label>
            <input type="text" id="Descripcion" name="Descripcion" value="@Model.Descripcion" class="form-control" required>
        </div>

        <div class="form-group m-2">
            <label for="Foto" class="mb-1"><i class="fas fa-user"></i> Foto:</label>
            
            <input type="file" id="Foto" name="Foto"/>
        </div>



        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Guardar</button>
    </form>
</div>

<script src="~/Scripts/jquery-3.4.1.js"></script>

